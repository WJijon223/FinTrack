<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fintrack.ResetController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #0e1624;">

    <children>
        <VBox fx:id="glassPane"
              alignment="CENTER"
              spacing="15.0"
              AnchorPane.topAnchor="100.0"
              AnchorPane.bottomAnchor="100.0"
              AnchorPane.leftAnchor="120.0"
              AnchorPane.rightAnchor="120.0"
              prefWidth="360.0"
              style="-fx-background-color: rgba(255, 255, 255, 0.08);
                     -fx-background-radius: 20;
                     -fx-border-color: rgba(255, 255, 255, 0.15);
                     -fx-border-radius: 20;
                     -fx-effect: dropshadow(three-pass-box, rgba(0, 0, 0, 0.3), 10, 0, 0, 0);">
            <padding>
                <Insets top="30.0" bottom="30.0" left="30.0" right="30.0"/>
            </padding>
            <children>

                <!-- Page Title -->
                <Label text="Reset your password" textFill="#fdfcfc">
                    <font><Font name="System Bold" size="20.0"/></font>
                </Label>

                <!-- EMAIL FIELD (important) -->
                <TextField fx:id="emailField"
                           promptText="Enter Your Email"
                           style="-fx-background-color: #1a1f2e;
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: white;
                                  -fx-background-radius: 8;" />

                <!-- Reset Button -->
                <Button fx:id="saveButton"
                        text="Reset"
                        onAction="#handleSave"
                        style="-fx-background-color: #5dc7ff;
                               -fx-text-fill: white;
                               -fx-background-radius: 8;
                               -fx-font-weight: bold;" />

                <!-- Back to Login -->
                <Hyperlink fx:id="backToLoginLink"
                           text="Back to Login"
                           onAction="#handleBackToLogin"
                           style="-fx-text-fill: #5dc7ff;" />

            </children>
        </VBox>
    </children>
</AnchorPane>
