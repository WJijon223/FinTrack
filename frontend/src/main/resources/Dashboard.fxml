<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.fintrack.DashboardController" xmlns:fx="http://javafx.com/fxml/1" styleClass="root">
    <!-- Left Sidebar -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" prefWidth="80" styleClass="sidebar">
            <padding>
                <Insets top="30" bottom="20"/>
            </padding>
            <Button text="🏠" styleClass="sidebar-button" onAction="#navigateToHome"/>
            <Button text="📄" styleClass="sidebar-button" onAction="#navigateToReports"/>
            <Button text="📅" styleClass="sidebar-button" onAction="#navigateToCalendar"/>
            <Button text="📊" styleClass="sidebar-button" onAction="#navigateToAnalytics"/>
            <Button text="👤" styleClass="sidebar-button" onAction="#navigateToProfile"/>
            <Button fx:id="themeToggleBtn" text="🌙" styleClass="sidebar-button" onAction="#toggleTheme"/>
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="15" styleClass="topbar">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label fx:id="welcomeLabel" styleClass="header-label"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" styleClass="logout-button" onAction="#handleLogout"/>
        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane styleClass="scroll-pane" fitToWidth="true">
            <content>
                <VBox spacing="20" styleClass="content-grid">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <!-- Summary Cards -->
                    <GridPane hgap="15" vgap="15">
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="summary-card">
                            <Label text="Expenses" styleClass="summary-label"/>
                            <Label fx:id="expensesLabel" styleClass="summary-value"/>

                        </VBox>
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="summary-card">
                            <Label text="Savings" styleClass="summary-label"/>
                            <Label fx:id="savingsLabel" styleClass="summary-value"/>
                        </VBox>
                        <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="summary-card">
                            <Label text="Revenue" styleClass="summary-label"/>
                            <Label fx:id="revenueLabel" styleClass="summary-value"/>
                        </VBox>
                    </GridPane>

                    <!-- Pie Chart -->
                    <PieChart fx:id="pieChart" title="Expense Breakdown" styleClass="chart"/>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>